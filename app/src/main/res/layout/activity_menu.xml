<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/fastbuy"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/ivempresa"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_imagotipo_fastbuy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtNombreEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Empresa"
                    android:textColor="@color/blanco"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtrazonsocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Razon Social"
                    android:textColor="@color/blanco"
                    android:textSize="10dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnperfil"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1.3"
                android:background="@drawable/efecto_perfil"
                android:tint="@color/blanco"
                app:srcCompat="@drawable/ic_perfilempresa"
                tools:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/txtPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Pedidos Pendientes"
        android:textAlignment="center" />

    <GridView
        android:id="@+id/gvPedidos2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:numColumns="1">

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:background="@color/humo"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/efecto_btnmenu"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:tint="@drawable/tint_menu"
            app:srcCompat="@drawable/ic_menu" />

        <ImageButton
            android:id="@+id/btnproductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/efecto_btnmenu"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:tint="@drawable/tint_menu"
            app:srcCompat="@drawable/ic_productos" />

        <ImageButton
            android:id="@+id/btnreportes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/efecto_btnmenu"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:tint="@drawable/tint_menu"
            app:srcCompat="@drawable/ic_content_paste_black_24dp" />

    </LinearLayout>

</LinearLayout>