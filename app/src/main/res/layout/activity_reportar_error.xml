<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportarErrorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:text="Repotar un problema"
                android:textColor="@color/negro"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:paddingBottom="50dp"
                android:background="@drawable/shadow_simple">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Aqui puedes enviarnos alguna recomendación o falla encontrada en esta aplicación. Mientas más precisa sea la descripción, más fácil y rápido podremos solucionar cualquier problema con el servicio."
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="¡Gracias por ayudarnos a mejorar!"
                    android:layout_marginBottom="20dp"
                    android:textSize="16sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/etMensaje"
                        android:gravity="start"
                        android:hint="Describe los detalles del problema" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnEnviarReporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fastbuy"
                    android:textColor="@color/blanco"
                    android:text="Enviar reporte" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>