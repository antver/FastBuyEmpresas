<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desconectado"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DesconectadoActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MergeRootFrame" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="danger.json"
                app:lottie_loop="false"
                app:lottie_autoPlay="true"
                app:lottie_scale="0.2"
                android:layout_width="200dp"
                android:layout_margin="0dp"
                android:layout_height="150dp" />

            <TextView
                android:text="Lo Sentimos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtLoSentimos"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_weight="0.00"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Comprueba tu conexiÃ³n a internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtComprueba"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
